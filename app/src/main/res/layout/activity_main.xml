<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.a403.myapplication.MainActivity">

    <TextView
        android:text="선택을 시작하겠습니까?"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView" />

    <Switch
        android:text="시작함"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/switch1" />

    <LinearLayout
        android:id="@+id/LL"
        android:visibility="visible"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="63dp">
    </LinearLayout>

    <TextView
        android:text="좋아하는 안드로이드 버전은?"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView2" />

    <RadioGroup
        android:id="@+id/RG"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <RadioButton
            android:text="젤라빈(4.3)"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/jel"
            android:id="@+id/radioButton"
            android:layout_weight="1" />

        <RadioButton
            android:text="킷켓(4.4)"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/kit"
            android:id="@+id/radioButton2"
            android:layout_weight="1" />

        <RadioButton
            android:text="롤리팝(5.0)"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/rol"
            android:id="@+id/radioButton3"
            android:layout_weight="1" />

    </RadioGroup>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="175dp"
        app:srcCompat="@drawable/rol"
        android:layout_weight="1"
        android:id="@+id/imageView" />

    <Button
        android:text="종료"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/button3" />

    <Button
        android:text="처음으로"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/button4" />

</LinearLayout>
