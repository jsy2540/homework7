<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.a403.myapplication.MainActivity"
    android:weightSum="1">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Switch
            android:text="예약시작"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/reserve_switch"
            android:layout_weight="0.17" />

        <Chronometer
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/CM"
            android:layout_weight="1" />

    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical"
        android:visibility="visible"
        android:id="@+id/reserve_frame">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="invisible"
            android:id="@+id/reserve_customer">

            <TextView
                android:text="인원예약"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/TV1"
                android:layout_weight="1"
                android:background="@color/colorAccent"
                android:textAlignment="center"/>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:text="어른(15000원)"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/TV2" />

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="number"
                    android:ems="10"
                    android:id="@+id/adult"
                    android:layout_weight="1" />

            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <TextView
                    android:text="청소년(12000원)"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/TV3" />

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="number"
                    android:ems="10"
                    android:id="@+id/teenager" />

            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <TextView
                    android:text="어린이(8000원)"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/TV4"/>

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="number"
                    android:ems="10"
                    android:id="@+id/child"
                    android:layout_weight="1" />

            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <RadioGroup
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <RadioButton
                        android:text="기본할인(5%할인)"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/RB1"
                        android:layout_weight="1"
                        android:checked="true"/>

                    <RadioButton
                        android:text="현금할인(10%할인)"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/RB2"
                        android:layout_weight="1" />

                    <RadioButton
                        android:text="MemberShip있음(20%할인)"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/RB3"
                        android:layout_weight="1" />




                </RadioGroup>
                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    app:srcCompat="@drawable/park"
                    android:id="@+id/IV"
                    android:layout_weight="1" />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <Button
                    android:text="예약완료"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/B1"
                    android:layout_weight="1" />

                <Button
                    android:text="시간예약 GO"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/B2"
                    android:layout_weight="1" />


            </LinearLayout>
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <TextView
                    android:text="총 명수 :"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/TV5" />

                <TextView
                    android:text="할인금액 :"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/TV6" />

                <TextView
                    android:text="결제금액 :"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/TV7" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <RadioButton
                    android:text="일자 설정"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/RB4"
                    android:layout_weight="1" />

                <RadioButton
                    android:text="시간 설정"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/RB5"
                    android:layout_weight="1" />
            </RadioGroup>

            <TextView
                android:text="시간 예약"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/TV8"
                android:background="@color/colorPrimary"
                android:textAlignment="center"
                />

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="250dp">

                <CalendarView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:id="@+id/CV"
                    android:visibility="visible"/>

                <TimePicker
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/TP"
                    android:visibility="invisible"/>
            </FrameLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <Button
                    android:text="예약완료"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/B3"
                    android:layout_weight="1" />

                <Button
                    android:text="이전으로"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/B4"
                    android:layout_weight="1" />
            </LinearLayout>
        </LinearLayout>

    </FrameLayout>
</LinearLayout>